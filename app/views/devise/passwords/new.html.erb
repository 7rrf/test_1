<div style="padding-left: 5%; padding-right: 5%;">
	<br />


<h1 style="text-align: center;">Forgot your password?</h1><br />
<div class="form-signin">
<div class="form-group">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :class => "form-control", :style => "max-width: 200px; min-width:50px", :placeholder => "Your e-mail..." %></div><br />

  <div><%= f.submit "Send me instructions!", :class => "btn btn-info", :style => "max-width: 200px; min-width:50px;" %></div>
<% end %><br />
<% if @admin.errors.full_messages.any? %>
<p> Error, could not find that email.</p>
<% end %>
<%= render "devise/shared/links" %>
</div>
<hr></hr>
</div>

