  });

$("#Marketing3, #parent4").hover(function(){
  $("#parent4").css({opacity: 1.0});
  },function(){
  $("#parent4").css({opacity: 0.5});
  });

});

$(function (){
  $("#popoverSlide").popover({ trigger: "hover" });
});

$(function (){
