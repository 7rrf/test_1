<script type="text/javascript">
var isOn = false;
$(function(){
  $('.sidemennu').css({'display': 'none'})
$('#sidemennubutton').click(function(){
  $('.sidemennu').toggle();
    console.log(isOn);
    if (isOn){
      isOn = false;
      $('.settingcontent').removeClass("col-md-10 col-md-push-2");
